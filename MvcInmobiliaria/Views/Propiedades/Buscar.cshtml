@model IEnumerable<Entidades.Propiedad>

@{
    ViewBag.Title = "Gestión de Propiedades";
}

<h2>Buscar</h2>

<p>
    @Html.ActionLink("Crear nueva", "Create")


    @using (Html.BeginForm())
    {
   <p>
        Direccion: @Html.TextBox("stringBusqueda") <br />
        <br />
        
        <button type="submit" value="Filtrar" class="btn btn-info" title="Filtrar" >
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            </button>
    </p>
    }
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ciudad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.m2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ciudad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.m2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.cod_propiedad }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.cod_propiedad }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.cod_propiedad })
        </td>
    </tr>
}

</table>
